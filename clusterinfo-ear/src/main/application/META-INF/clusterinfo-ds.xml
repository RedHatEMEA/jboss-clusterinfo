<?xml version="1.0"?>
<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_5_0.dtd">
<datasources>
	<local-tx-datasource>
		<jndi-name>${application.ds.jndiname}</jndi-name>
		<connection-url>${application.ds.url}</connection-url>
		<driver-class>${application.ds.driver}</driver-class>
		<user-name>${application.ds.user}</user-name>
		<password>${application.ds.password}</password>
		<min-pool-size>${application.ds.minpoolsize}</min-pool-size>
		<max-pool-size>${application.ds.maxpoolsize}</max-pool-size>
		<blocking-timeout-millis>5000</blocking-timeout-millis>
		<idle-timeout-minutes>15</idle-timeout-minutes>
		<metadata>
			<type-mapping>${application.ds.typemapping}</type-mapping>
		</metadata>
	</local-tx-datasource>
</datasources>
